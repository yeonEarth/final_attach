<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:card_view="http://schemas.android.com/tools"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <androidx.cardview.widget.CardView
        android:id="@+id/page4_cardview"
        app:cardCornerRadius="10dp"
        android:elevation="5dp"
        android:layout_width="156dp"
        android:layout_height="156dp"
        android:layout_gravity="center"
        android:layout_margin="8dp">

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent">

            <ImageView
                android:id="@+id/page4_2_image"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:background="@drawable/ic_bg_02beach"/>

            //이미지 그림자
            <ImageView
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:background="@drawable/background_shadow" />

            //날짜
            <TextView
                android:id="@+id/page4_2_date"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_margin="6dp"
                android:layout_alignParentRight="true"
                android:text="2020.02.24"
                android:fontFamily="@font/gothic_medium"/>
        </RelativeLayout>

        //텍스트
        <LinearLayout
            android:orientation="vertical"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="bottom"
            android:layout_margin="7dp">

            //일정 이름
            <TextView
                android:id="@+id/page4_2_title"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="첫번재 |n여행"
                android:textAppearance="@style/cardview_titleText"/>
        </LinearLayout>



    </androidx.cardview.widget.CardView>
</LinearLayout>