<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:paddingLeft="12dp"
    android:paddingRight="12dp"
    android:paddingTop="12dp"
    android:paddingBottom="8dp"
    android:orientation="vertical"
    android:id="@+id/linearItem"
    android:layout_marginBottom="8dp"
    android:background="@drawable/box_white_rad8">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal">

        <LinearLayout
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="10"
            android:orientation="horizontal">
            // 도시 이름
            <TextView
                android:id="@+id/page1_1_1_city"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="서울"
                android:textSize="18dp"
                android:textColor="#000000"
                android:fontFamily="@font/gothic_medium"
                android:scaleX="0.98"/>

            <TextView
                android:id="@+id/page1_1_1_city_number"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="5"
                android:textSize="18dp"
                android:textColor="#FE800D"
                android:fontFamily="@font/gothic_medium"
                android:textStyle="bold"
                android:layout_marginLeft="7dp" />
        </LinearLayout>

        <RelativeLayout
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="1">
            // +버튼
            <TextView
                android:id="@+id/page1_1_1_togle"
                android:layout_width="16dp"
                android:layout_height="9dp"
                android:layout_centerInParent="true"
                android:layout_gravity="center_vertical"
                android:background="@drawable/ic_up_btn"
                android:textColor="#000000"/>
        </RelativeLayout>
    </LinearLayout>

    <ScrollView
        android:id="@+id/page1_1_1_view"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        // api들어가는 곳
        <androidx.recyclerview.widget.RecyclerView
            android:id="@+id/page1_1_1_fragment_recyclerview"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="18dp"
            android:layout_marginBottom="12dp"/>
    </ScrollView>
</LinearLayout>