<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".Page0_5">

    //애니메이션
    <com.airbnb.lottie.LottieAnimationView
        android:id="@+id/page0_5_bg"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        app:lottie_autoPlay="true"
        app:lottie_fileName="bg04.json"
        app:lottie_loop="true"/>


    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:padding="16dp">


        // 뒤로가기 버튼
        <TextView
            android:id="@+id/page0_5_back"
            android:layout_width="43dp"
            android:layout_height="43dp"
            android:background="@drawable/ic_icon_back_page0"
            android:elevation="5dp"
            android:clickable="true"
            android:layout_marginTop="8dp"/>

        // Step 부분
        <RelativeLayout
            android:id="@+id/page0_5_step_layout"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@+id/page0_5_back"
            android:layout_marginTop="35dp"
            android:gravity="center_vertical">
            // Step4
            <TextView
                android:id="@+id/step4"
                android:layout_width="78dp"
                android:layout_height="22dp"
                android:background="@drawable/round_purple"
                android:layout_toRightOf="@+id/round3"
                android:text="STEP 4"
                android:fontFamily="@font/notosans_semibold"
                android:textColor="#FFFFFF"
                android:gravity="center" />

            // 동그라미들
            <ImageView
                android:id="@+id/round1"
                android:layout_width="8dp"
                android:layout_height="8dp"
                android:background="@drawable/round_gray"
                android:layout_marginRight="6dp"
                android:layout_centerVertical="true"/>

            <ImageView
                android:id="@+id/round2"
                android:layout_toRightOf="@+id/round1"
                android:layout_width="8dp"
                android:layout_height="8dp"
                android:background="@drawable/round_gray"
                android:layout_centerInParent="true"
                android:layout_marginLeft="6dp"
                android:layout_marginRight="6dp"/>
            <ImageView
                android:id="@+id/round3"
                android:layout_toRightOf="@+id/round2"
                android:layout_width="8dp"
                android:layout_height="8dp"
                android:background="@drawable/round_gray"
                android:layout_centerInParent="true"
                android:layout_marginLeft="6dp"
                android:layout_marginRight="6dp"/>

            <ImageView
                android:id="@+id/round4"
                android:layout_toRightOf="@+id/step4"
                android:layout_width="8dp"
                android:layout_height="8dp"
                android:background="@drawable/round_gray"
                android:layout_centerInParent="true"
                android:layout_marginLeft="6dp"/>

            <ImageView
                android:id="@+id/round5"
                android:layout_toRightOf="@+id/round4"
                android:layout_width="8dp"
                android:layout_height="8dp"
                android:background="@drawable/round_gray"
                android:layout_centerInParent="true"
                android:layout_marginLeft="6dp"/>

            <ImageView
                android:id="@+id/round6"
                android:layout_toRightOf="@+id/round5"
                android:layout_width="8dp"
                android:layout_height="8dp"
                android:background="@drawable/round_gray"
                android:layout_centerInParent="true"
                android:layout_marginLeft="6dp"/>
        </RelativeLayout>

        <RelativeLayout
            android:id="@+id/page0_5_question"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="10dp"
            android:layout_below="@+id/page0_5_step_layout">
            // Q4
            <TextView
                android:id="@+id/page0_5_q"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="하루 일정은 어떻게 계획하는 편인가요?"
                android:fontFamily="@font/notosans_semibold"
                android:textColor="#000000"
                android:textSize="24dp"
                android:gravity="left"/>
        </RelativeLayout>

        // 대답 버튼 레이아웃
        <RelativeLayout
            android:id="@+id/page0_5_answer"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_above="@+id/page0_5_later"
            android:clipToPadding="false"
            android:padding="4dp"
            android:layout_marginBottom="24dp">
            // 돌아다니기
            <TextView
                android:id="@+id/page0_5_a1"
                android:layout_width="match_parent"
                android:layout_height="65dp"
                android:background="@drawable/box_round"
                android:text="하나라도 더! 부지런하게 돌아다니기"
                android:gravity="center"
                android:textSize="16dp"
                android:textColor="#000000"
                android:fontFamily="@font/notosans_regular"
                android:elevation="3dp"
                android:clickable="true"/>

            // 여유롭게
            <TextView
                android:id="@+id/page0_5_a2"
                android:layout_width="match_parent"
                android:layout_height="65dp"
                android:background="@drawable/box_round"
                android:text="느긋하게 쉬면서 여유 즐기기"
                android:gravity="center"
                android:textSize="16dp"
                android:textColor="#000000"
                android:fontFamily="@font/notosans_regular"
                android:layout_below="@+id/page0_5_a1"
                android:layout_marginTop="8dp"
                android:elevation="3dp"
                android:clickable="true"/>
        </RelativeLayout>

        // 나중에하기 버튼
        <TextView
            android:id="@+id/page0_5_later"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:textSize="11dp"
            android:text="나중에 다시 하기"
            android:layout_alignParentBottom="true"
            android:gravity="center"
            android:fontFamily="@font/notosans_semibold"
            android:textColor="#CC000000" />


    </RelativeLayout>

</RelativeLayout>