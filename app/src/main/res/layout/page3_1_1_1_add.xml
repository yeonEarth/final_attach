<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:background="@drawable/box_round"
    android:layout_width="match_parent"
    android:layout_height="63dp">

    //추가버튼
    <androidx.appcompat.widget.AppCompatButton
        android:id="@+id/page3_1_1_1_1_addbtn1"
        android:layout_width="22dp"
        android:layout_height="22dp"
        android:layout_marginLeft="17dp"
        android:layout_centerVertical="true"
        android:background="@drawable/circle_add"
        android:text="+"
        android:textSize="16sp"
        android:textColor="#ffffff" />

    //도시 추가하기 텍스트
    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginLeft="16dp"
        android:layout_centerVertical="true"
        android:layout_toRightOf="@+id/page3_1_1_1_1_addbtn1"
        android:text="관광지 추가하기"
        android:textColor="#000000"
        android:textSize="18sp"
        android:fontFamily="@font/gothic_medium" />

    //버튼 터치 영역 확장
    <androidx.appcompat.widget.AppCompatButton
        android:id="@+id/page3_1_1_1_1_addbtn"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_marginBottom="10dp"
        android:background="#00000000"
        android:fontFamily="@font/gothic_medium"
        android:scaleX="0.98"/>

</RelativeLayout>
