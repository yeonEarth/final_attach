<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical" android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_marginBottom="8dp"
    android:background="#ffffff">

    <RelativeLayout
        android:id="@+id/menu_layout"
        android:layout_width="match_parent"
        android:layout_height="36dp"
        android:background="#F3F3F3"
        android:padding="5dp">

        //헤더 아이콘
        <ImageView
            android:id="@+id/menu_header_img"
            android:layout_width="20dp"
            android:layout_height="20dp"
            android:layout_centerVertical="true"
            android:background="@mipmap/ic_launcher"/>

        //헤더 이름
        <TextView
            android:id="@+id/menu_title"
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:layout_marginLeft="10dp"
            android:layout_centerVertical="true"
            android:layout_toRightOf="@id/menu_header_img"
            android:text="MY 메뉴"
            android:textSize="18sp"
            android:fontFamily="@font/gothic_medium"
            android:gravity="center"
            android:textColor="#000000"
            android:scaleX="0.98"/>

        //펼치는 버튼
        <Button
            android:id="@+id/menu_expand_btn"
            android:layout_width="16dp"
            android:layout_height="9dp"
            android:layout_centerVertical="true"
            android:layout_alignParentRight="true"
            android:background="@drawable/ic_up_btn"/>

    </RelativeLayout>

    <androidx.recyclerview.widget.RecyclerView
        android:id="@+id/second_recyclerview"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"/>

</LinearLayout>