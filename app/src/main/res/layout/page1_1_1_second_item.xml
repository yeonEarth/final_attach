<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:layout_height="wrap_content">

    //카드뷰
    <androidx.cardview.widget.CardView
        android:id="@+id/page1_1_1_cardview"
        android:layout_width="match_parent"
        android:layout_height="50dp"
        android:layout_margin="8dp"
        app:cardCornerRadius="5dp">

        //가로로 정렬
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="50dp"
            android:orientation="horizontal"
            android:background="#F3F3F3"
            android:gravity="center_vertical">

            //이미지를 둥글게 보여주기 위한 레이아웃
            <LinearLayout
                android:layout_width="34dp"
                android:layout_height="34dp"
                android:background="@drawable/box_round"
                android:layout_margin="8dp">

                <ImageView
                    android:id="@+id/no_image"
                    android:layout_width="34dp"
                    android:layout_height="34dp"
                    android:background="@drawable/cardview_no_img" />
            </LinearLayout>

            //텍스트
            <LinearLayout
                android:orientation="vertical"
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_weight="6"
                android:layout_margin="5dp"
                android:gravity="center_vertical">

                //관광지 종류
                <TextView
                    android:id="@+id/page1_1_1_cardview_type"
                    android:layout_width="match_parent"
                    android:layout_height="0dp"
                    android:layout_weight="3"
                    android:gravity="bottom"
                    android:text="역사"
                    android:textSize="11dp"
                    android:fontFamily="@font/gothic_medium"
                    android:textColor="#000000"/>

                //관광지 이름
                <TextView
                    android:id="@+id/page1_1_1_cardview_title"
                    android:layout_width="match_parent"
                    android:layout_height="0dp"
                    android:layout_weight="4"
                    android:gravity="top"
                    android:text="경복궁"
                    android:textSize="14dp"
                    android:fontFamily="@font/gothic_bold"
                    android:textColor="#000000"
                    android:textStyle="bold"/>
            </LinearLayout>
            //하트
            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:gravity="center"
                android:layout_margin="8dp">
                <androidx.appcompat.widget.AppCompatButton
                    android:id="@+id/page1_1_1_cardview_heart"
                    android:layout_width="26dp"
                    android:layout_height="23dp"
                    android:background="@drawable/ic_heart_off" />
            </LinearLayout>
        </LinearLayout>
    </androidx.cardview.widget.CardView>
</LinearLayout>