    <style name="cardview_titleText2">
        <item name="android:textSize">16sp</item>
        <item name="android:textColor">#000000</item>
        <item name="android:fontFamily">@font/notosans</item>
    </style>

    <style name="subtitle_text">
        <item name="android:textSize">20dp</item>
        <item name="android:textColor">#AAAAAA</item>
        <item name="android:fontFamily">@font/notosans</item>
    </style>

    <style name="some_id">
        <item name="android:textSize">24sp</item>
        <item name="android:textColor">#000000</item>
        <item name="android:letterSpacing" tools:targetApi="lollipop">-0.03</item>
